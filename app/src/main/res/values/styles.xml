<resources>
    <!--页面开关动画-->
    <style name="AnimationActivity" parent="@android:style/Animation.Activity">
        <item name="android:activityOpenEnterAnimation">@anim/anim_enter</item>
        <item name="android:activityOpenExitAnimation">@anim/anim_exit</item>
        <item name="android:activityCloseEnterAnimation">@anim/back_enter</item>
        <item name="android:activityCloseExitAnimation">@anim/back_exit</item>
    </style>

    <style name="PopupAnimation" mce_bogus="1" parent="android:Animation">
        <item name="android:windowEnterAnimation">@anim/popup_enter</item>
        <item name="android:windowExitAnimation">@anim/popup_exit</item>
    </style>

    <style name="CustomWindowTitleText" parent="android:TextAppearance.WindowTitle">
        <item name="android:textSize">20dip</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textStyle">bold|italic</item>
    </style>

    <!--组件样式-->

    //输入框

    <style name="ed_commom">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:singleLine">true</item>
        <item name="android:textColor">?colorAccent</item>
        <item name="android:textSize">@dimen/text_size_xl</item>
        <item name="android:textColorHint">?android:textColorSecondary</item>
    </style>
    //文本框

    <style name="tv_title">//标题性文本
        <item name="android:textColor">?android:textColorTertiary</item>
        <item name="android:textSize">@dimen/text_size_xl</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

    <style name="tv_remind">//标注性文本
        <item name="android:layout_marginTop">@dimen/margin_s</item>
        <item name="android:layout_marginBottom">@dimen/margin_s</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:textColor">?android:textColorSecondary</item>
        <item name="android:textSize">@dimen/text_size_xs</item>
    </style>

    <style name="tv_commom">//普通文本
        <item name="android:textSize">@dimen/text_size_m</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:textColor">?android:textColorPrimary</item>
    </style>

    <style name="tv_ripple">//带波纹效果的文本
        <item name="android:textSize">@dimen/text_size_m</item>
        <item name="android:textColor">?android:textColorPrimary</item>
    </style>

    <style name="tv_ripple_listitem" parent="tv_ripple">//列表引用文本
        <item name="android:layout_height">match_parent</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:layout_marginLeft">@dimen/margin_m</item>
    </style>

    <style name="tv_ripple_ToggleButton" parent="tv_ripple">//spanner文本
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">@dimen/height_2xm</item>
        <item name="android:checked">true</item>
    </style>

    <style name="tv_ripple_bottom" parent="tv_ripple">
        <item name="android:textColor">?attr/color_text_bottom</item>
        <item name="android:layout_marginLeft">@dimen/margin_m</item>
        <item name="android:layout_gravity">center_vertical</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

    <style name="tv_withframe">//带背景框文本
        <item name="android:textSize">@dimen/text_size_m</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:background">?attr/drable_common_circle</item>
        <item name="android:padding">2dp</item>
        <item name="android:textColor">?android:textColorTertiary</item>

    </style>

    <style name="tv_chat_item_text">//聊天文本
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">?android:textColorTertiary</item>
        <item name="android:textSize">@dimen/text_size_m</item>
    </style>

    <style name="tv_chat_item_time">//聊天时间文本
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginTop">@dimen/margin_s</item>
        <item name="android:textColor">?android:textColorTertiary</item>
        <item name="android:textSize">@dimen/text_size_s</item>
    </style>

    //图片

    <style name="iv_chat_item_image_left">
        <item name="android:layout_width">@dimen/width_m</item>
        <item name="android:layout_height">@dimen/height_m</item>
        <item name="android:layout_alignParentLeft">true</item>
    </style>

    <style name="iv_chat_item_image_right">
        <item name="android:layout_width">@dimen/width_m</item>
        <item name="android:layout_height">@dimen/height_m</item>
        <item name="android:layout_alignParentRight">true</item>
    </style>

    <style name="iv_bottom">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginLeft">@dimen/margin_m</item>
        <item name="android:layout_gravity">center_vertical</item>
    </style>
    //toolbar

    <style name="toolbar">
        <item name="android:textSize">@dimen/text_size_xl</item>
        <item name="android:textColor">?android:textColorTertiary</item>
    </style>
    //头像剪裁
    <declare-styleable name="RoundedImageView">
        <attr name="riv_corner_radius" format="dimension" />
        <attr name="riv_corner_radius_top_left" format="dimension" />
        <attr name="riv_corner_radius_top_right" format="dimension" />
        <attr name="riv_corner_radius_bottom_left" format="dimension" />
        <attr name="riv_corner_radius_bottom_right" format="dimension" />
        <attr name="riv_border_width" format="dimension" />
        <attr name="riv_border_color" format="color" />
        <attr name="riv_mutate_background" format="boolean" />
        <attr name="riv_oval" format="boolean" />
        <attr name="android:scaleType" />
        <attr name="riv_tile_mode">
            <enum name="clamp" value="0" />
            <enum name="repeat" value="1" />
            <enum name="mirror" value="2" />
        </attr>
        <attr name="riv_tile_mode_x">
            <enum name="clamp" value="0" />
            <enum name="repeat" value="1" />
            <enum name="mirror" value="2" />
        </attr>
        <attr name="riv_tile_mode_y">
            <enum name="clamp" value="0" />
            <enum name="repeat" value="1" />
            <enum name="mirror" value="2" />
        </attr>
    </declare-styleable>

    <!--容器样式-->
    //线性框架

    <style name="ll_chat_content_left">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:background">?attr/chat_left</item>
    </style>

    <style name="ll_chat_content_right">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:background">?attr/chat_right</item>
        <item name="android:layout_marginRight">@dimen/margin_m</item>
    </style>

    <style name="ll_namecard_edit">
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:background">?attr/color_bg_commom</item>
        <item name="android:paddingBottom">@dimen/margin_s</item>
        <item name="android:paddingLeft">@dimen/margin_m</item>
        <item name="android:paddingRight">@dimen/margin_m</item>
        <item name="android:orientation">vertical</item>
    </style>
    //recycleview

    <style name="rc_base">
        <item name="android:layout_height">match_parent</item>
        <item name="android:layout_width">match_parent</item>
    </style>

    <style name="rc_putitem" parent="rc_base">
        <item name="android:animationCache">?attr/color_transparent</item>??
        <item name="android:listSelector">?attr/color_transparent</item>??
        <item name="android:divider">@null</item>
        <item name="android:scrollbars">none</item>
    </style>

    <style name="rc_putitem_notcardview" parent="rc_putitem">
        <item name="android:background">?attr/color_bg_commom</item>
    </style>

